---
interface Props {
	title: string;
	backgroundColor: string;
}

const { title, backgroundColor } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Random Color Generator" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body style={`background-color: ${backgroundColor}`} class="min-h-screen font-sans">
    <slot />
  </body>
</html>
